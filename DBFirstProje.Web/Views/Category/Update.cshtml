@{
    Layout = "_Layout";
    ViewData["Title"] = "Kategori Güncelleme Sayfası";
}
@*Model eklemeyi unutma!!!*@
@model DBFirstProje.Web.Models.Category
<div class="container-fluid">
    <h1>KATEGORİ GÜNCELLE</h1>
    <hr />
    <div class="col-md-6">
        <form asp-controller="Category" asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SubCategory1" class="control-label"></label>
                <input asp-for="SubCategory1" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SubCategory2" class="control-label"></label>
                <input asp-for="SubCategory2" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SubCategory3" class="control-label"></label>
                <input asp-for="SubCategory3" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SubCategory4" class="control-label"></label>
                <input asp-for="SubCategory4" class="form-control" />
            </div>
            @*X <input type="reset" class="btn btn-danger m-2" value="Formu Temizle"></>*@
            <input type="submit" class="btn btn-primary m-2" value="Kategoriyi Güncelle"></>
        </form>
    </div>
    <hr />
    <div class="form-group m-2">
        <a asp-controller="Catgory" asp-action="Index" class="btn btn-outline-dark">Kategoriler Listesine Git...</a>
    </div>
    <hr />
</div>




